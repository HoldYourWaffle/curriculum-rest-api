query Id($id:ID) {
  allVak(filter:{id:$id}) {
    id
    title
    description
    replaces
    unreleased
    Vakkern {
      id
    }
    Doelniveau {
      ...DoelNiveau
    }
  }
  allVakkern(filter:{id:$id}) {
    id
    title
    description
    replaces
    unreleased
    Vaksubkern {
      id
    }
    Doelniveau {
      ...DoelNiveau
    }
  }
  allVaksubkern(filter:{id:$id}) {
    id
    title
    description
    replaces
    unreleased
    Vakinhoud {
      id
    }
    Doelniveau {
      ...DoelNiveau
    }
  }
  allVakinhoud(filter:{id:$id}) {
    id
    title
    description
    replaces
    unreleased
    Doelniveau {
      ...DoelNiveau
    }
  }
  allDoel(filter:{id:$id}) {
    id
    title
    description
  }
  allNiveau(filter:{id:$id}) {
    id
    title
    description
  }
  allDoelniveau(filter:{id:$id}) {
    ...DoelNiveau
  }
  allKerndoel(filter:{id:$id}) {
    id
    title
    type
    Doelniveau {
      ...DoelNiveau
    }
  }
  allDeprecated(filter:{id:$id}) {
    id
    title
    description
    types
    replacedBy
    Vakkern {
      id
    }
    Vaksubkern {
      id
    }
    Vakinhoud {
      id
    }
    Doelniveau {
      ...DoelNiveau
    }
  }
}

# Queries voor alles op specific niveau
query VakOpNiveau($niveau:ID) {
  allNiveauIndex(filter:{niveau_id:[$niveau]}) {
    Vak {
      id
      title
    }
  }
} 

query VakByIdOpNiveau($niveau:ID, $id:ID) {
  allNiveauIndex(filter:{niveau_id:[$niveau]}) {
    Vak(filter:{id:$id}) {
      id
      title
      Doelniveau(filter:{niveau_id:[$niveau]}) {
        ...DoelNiveau
      } 
    }
    Vakkern(filter:{vak_id:[$id]}) {
      id
      title
    }
  }
} 

