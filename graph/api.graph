query DoelNiveau {
  allDoelniveau {
    id
  }
}
fragment DoelNiveau on Doelniveau {
    id
    Doel {
      id
      title
      description
    }
    Niveau {
      id
      title
      description
      prefix
      type
    }
}
query DoelNiveauById($id:ID) {
  Doelniveau(id:$id) {
    ...DoelNiveau
  }
}

query Doel {
  allDoel {
    id
    title
  }
}

query DoelById($id:ID) {
  Doel(id:$id) {
    id
    title
    description
    volgnr
  }
}

query Kerndoel {
  allKerndoel {
    id
    title
  }
}

query KerndoelById($id:ID) {
  Kerndoel(id:$id) {
    id
    title
    type
    Doelniveau {
      ...DoelNiveau
    }
  }
}

query Niveau {
  allNiveau {
    id
    title
  }
}
query NiveauById($id:ID) {
